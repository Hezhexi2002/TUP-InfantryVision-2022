{
	"version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++ build active file",
            "command": "/usr/bin/g++-9",
            "args": [
                "-fdiagnostics-color=always","-g",
                "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}","`pkg-config", "--cflags", "--libs", "opencv4`","-pthread"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}